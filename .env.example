# SEVDO Platform Environment Configuration
# Copy this file to .env and update with your values

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-key-here

# AI Model Configuration  
AIDER_MODEL=deepseek-coder:6.7b
OLLAMA_HOST=http://host.docker.internal:11434

# Database Configuration (REQUIRED - No defaults for security)
POSTGRES_DB=sevdo_db
POSTGRES_USER=sevdo_user
POSTGRES_PASSWORD=postgres123

# Environment
SEVDO_ENV=development
ACCESS_TOKEN_EXPIRE_MINUTES=30


SEVDO_ENV=development
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Processing Limits
TRANSLATE_MAX_FILE_BYTES=1048576
TRANSLATE_BATCH_MAX_WORKERS=4
TRANSLATE_CACHE_TTL_SECONDS=1800
TRANSLATE_CACHE_MAXSIZE=256

# Audio/AI processing
PULSE_SERVER=unix:${XDG_RUNTIME_DIR}/pulse/native
ALSA_CARD=0

# Playground settings
PLAYGROUND_HOST=0.0.0.0
PLAYGROUND_PORT=8003